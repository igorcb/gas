<%= form_for @launche, :html => { :class => 'form-horizontal' } do |f| %>
  <%#= render 'shared/error_messages' %>
<legend><%= controller.action_name.capitalize %> Launche</legend> 

    <div class="control-group">
      <%= f.label :date_launche, "Date", :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select(:date_launche, :use_month_numbers => true, :class => 'date_field') %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :miles, :class => 'control-label' %>
      <div class="controls">
        <%= f.number_field :miles, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :total, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :total , :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :price, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :price, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit 'Save', :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', launches_path, :class => 'btn' %>
    </div>


<% end %>
